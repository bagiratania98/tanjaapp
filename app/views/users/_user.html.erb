<%= turbo_frame_tag user do %>
  <div class="user">
    <%= link_to user.name, user_path(user), data: { turbo_frame: "_top" } %>
    <%= link_to user.email, user_path(user) %>
    <div class="user__actions">
      <%= button_to "Delete",
                    user_path(user),
                    method: :delete %>
      <%= link_to "Edit",
                  edit_user_path(user) %>
    </div>
  </div>
<% end %>
